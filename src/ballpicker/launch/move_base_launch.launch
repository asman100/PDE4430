<?xml version="1.0"?>
<launch>
​
  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <arg name="base_local_planner" default="base_local_planner/TrajectoryPlannerROS"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <remap from="/cmd_vel" to="/velocity_controller/cmd_vel"/>
    <remap from="/odom" to="/velocity_controller/odom"/>
    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>  
    <param name="recovery_behavior_enabled" value="true"/>
    <param name="controller_frequency" value="50.0"/>

    <rosparam file="$(find ballpicker)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find ballpicker)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find ballpicker)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find ballpicker)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find ballpicker)/config/base_local_planner_params.yaml" command="load" />

  </node>
​
</launch>
